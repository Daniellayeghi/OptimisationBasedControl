  </worldbody>
  
  <actuator>
    <motor name="proximal" joint="proximal" gear="1"/>
    <motor name="distal" joint="distal" gear="0.5"/>
    <motor name="distal2" joint="distal2" gear="0.25"/>
  </actuator>
</mujoco>
