<mujoco model="finger">

    <option timestep="0.01" cone="elliptic" iterations="200">
        <flag gravity="enable"/>
    </option>

    <default>`
        <geom solimp="0 0.9 0.01" solref=".02 1"/>
        <joint type="hinge" axis="0 -1 0"/>
        <motor ctrllimited="true" ctrlrange="-1 1"/>
        <default class="finger">
            <site type="ellipsoid" size=".025 .03 .025" rgba=".5 .5 .5 .3" group="3"/>
        </default>
    </default>

    <worldbody>
        <light name="light" directional="true" diffuse=".6 .6 .6" pos="0 0 2" specular=".3 .3 .3"/>
        <geom name="ground" type="plane" pos="0 0 -0.6" size=".6 .2 10" />
        <camera name="cam0" pos="0 -1 .8" xyaxes="1 0 0 0 1 2"/>
        <camera name="cam1" pos="0 -1 .4" xyaxes="1 0 0 0 0 1" />

        <body name="proximal" pos="-.0 0 -0.01" childclass="finger">
            <geom name="proximal_decoration" type="cylinder" fromto="0 -.033 0 0 .033 0" size=".034" />
            <joint name="proximal" range="-150 -80" ref="-90" damping="0.05" limited="false" />
            <geom name="proximal" type="capsule" size=".03" fromto="0 0 0 0 0 -.17"/>
            <body name="distal" pos="0 0 -.18" childclass="finger">
                <joint name="distal" range="-50 50" damping="0.05" limited="false"/>
                <geom name="distal" type="capsule" size=".028" fromto="0 0 0 0 0 -.16"/>
                <geom name="fingertip" type="capsule" size=".03" fromto="0 0 -.13 0 0 -.161"/>
                <site name="touchtop" pos=".01 0 -.17"/>
                <site name="touchbottom" pos="-.01 0 -.17"/>
            </body>
        </body>

        <body name="spinner" pos="-.0 0 -.4">
            <joint name="hinge" range="-50 50" frictionloss=".01" damping=".35" limited="false"/>
            <geom name="cap1" type="capsule" size=".04 .09" pos=".02 0 0" />
            <geom name="cap2" type="capsule" size=".04 .09" pos="-.02 0 0"/>
            <site name="tip" type="sphere"  size=".02" pos="0 0 .13"/>
            <geom name="spinner_decoration" type="cylinder" fromto="0 -.045 0 0 .045 0" size=".02"/>
        </body>

    </worldbody>

    <actuator>
        <motor name="proximal" joint="proximal" gear="3"/>
        <motor name="distal" joint="distal" gear="1.5"/>
    </actuator>

    <!-- All finger observations are functions of sensors. This is useful for finite-differencing. -->
    <sensor>
        <jointpos name="proximal" joint="proximal"/>
        <jointpos name="distal" joint="distal"/>
        <jointvel name="proximal_velocity" joint="proximal"/>
        <jointvel name="distal_velocity" joint="distal"/>
        <jointvel name="hinge_velocity" joint="hinge"/>
        <framepos name="tip" objtype="site" objname="tip"/>
        <framepos name="spinner" objtype="xbody" objname="spinner"/>
        <touch name="touchtop" site="touchtop"/>
        <touch name="touchbottom" site="touchbottom"/>
        <framepos name="touchtop_pos" objtype="site" objname="touchtop"/>
        <framepos name="touchbottom_pos" objtype="site" objname="touchbottom"/>
    </sensor>
</mujoco>
